{
    "family": "<SERVICE_NAME>",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/mlops-workshop-ecs-task-role",
    "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/mlops-workshop-ecs-task-role",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "containerDefinitions": [
      {
        "name": "<SERVICE_NAME>",
        "image": "<AWS_ACCOUNT_ID>.dkr.ecr.<AWS_REGION>.amazonaws.com/<SERVICE_NAME>:latest",
        "essential": true,
        "portMappings": [
          {
            "containerPort": 80,
            "protocol": "tcp"
          }
        ],
        "healthCheck": {
          "command": [
            "CMD-SHELL",
            "curl -f http://localhost:80/health || exit 1"
          ],
          "interval": 30,
          "timeout": 5,
          "retries": 3,
          "startPeriod": 60
        },
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/<SERVICE_NAME>",
            "awslogs-region": "<AWS_REGION>",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ]
  }
  